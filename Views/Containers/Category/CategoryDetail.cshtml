@using MedicalStore.Models
@using MedicalStore.Utils.Common
@{
    this.ViewData["Title"] = Routers.CategoryUpdate.Title;
    var category = (Category)this.ViewData["category"];
    var listProduct = (List<Product>)this.ViewData["listProductByCategoryId"];

    
}

<div class="flex-1 min-h-screen px-2 py-2 xl:px-8 xl:py-6">
    <div class="flex">
        @await Html.PartialAsync("../../Components/Navbar/NavbarSide.cshtml")
        <div class="content">
            <div class="mt-5 intro-y box">
                <div class="flex flex-col items-center p-5 border-b border-gray-200 sm:flex-row">
                    <h2 class="mr-auto text-base font-medium">Category Profile</h2>
                </div>
                <div>
                        <dl class="mt-2 divide-y divide-gray-200">
                        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Category Name</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@category.Name</dd>
                        </div>
                        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Description</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@category.Description</dd>
                        </div>
                        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Create Date</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@category.CreateDate</dd>
                        </div>
                        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Status</dt>
                            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">@category.Status</dd>
                        </div>
                        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                            <dt class="text-sm font-medium text-gray-500">Number of Product</dt>
                            <a href=""> <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"> @listProduct.Count.ToString() Products</dd></a>
                        </div>
                     </dl>
                   </div>
                <div>
                    <a href="/category/update?categoryId=@category.CategoryId" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Edit Category
                    </a>
                </div>
                <div>
                    @if(category.Status == CategoryStatus.ACTIVE) {
                    <form id="deleteForm" class="space-y-6">
                        <input type="hidden" name="categoryId" id="categoryId" value="@category.CategoryId" />
                        <button type="submit" onclick="return confirm('Are you sura you want to delete Category @category.Name')"
                                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Delete Category
                        </button>
                    </form>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/category/delete.js"></script>
}