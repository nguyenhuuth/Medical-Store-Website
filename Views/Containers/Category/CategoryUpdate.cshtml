@using MedicalStore.Utils.Common
@using MedicalStore.Models
@{
    this.ViewData["Title"] = Routers.CategoryUpdate.Title;
    var category = (Category)this.ViewData["category"];
}

<div class="flex-1 min-h-screen px-2 py-2 xl:px-8 xl:py-6">
    <div class="flex">
        @await Html.PartialAsync("../../Components/Navbar/NavbarSide.cshtml")
        <div class="content">
            <div class="mt-5 intro-y box">
                <div class="flex flex-col items-center p-5 border-b border-gray-200 sm:flex-row">
                    <h2 class="mr-auto text-base font-medium">Update Category</h2>
                </div>
                <dl class="mt-2 divide-y divide-gray-200">
                    <form id="updateForm" class="space-y-6">
                        @await Html.PartialAsync("../../Components/Form/FormMessage.cshtml")
                        <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Category Name</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            <input class="block px-4 py-3 w-full border-gray-300 intro-x login__input form-control"
                                   type="text" name="name" id="name" value="@category.Name" required placeholder="Name" />
                            <div id="NAMEERROR" data-label="Name" class="text-red-500 "></div>
                        </dd>
                    </div>
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Description</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            <textarea class="block px-4 py-3 w-full border-gray-300 intro-x login__input form-control"
                                      name="description" id="description" rows="10" cols="70">@category.Description</textarea>
                            <div id="DESCRIPTIONERROR" class="text-red-500 "></div>
                        </dd>
                    </div>
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Create Date</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            <input class="block px-4 py-3 w-full border-gray-300 intro-x login__input form-control"
                                                type="text" name="createDate" id="createDate" value="@category.CreateDate" placeholder="CreateDate" readonly />
                        </dd>
                    </div>
                    <div class="py-4 sm:py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Status</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                            <input class="block px-4 py-3 w-full border-gray-300 intro-x login__input form-control"
                                   type="text" name="status" id="status" value="@category.Status" placeholder="Status" readonly />
                        </dd>
                    </div>
                    <div>
                        <input type="hidden" name="categoryId" id="categoryId" value="@category.CategoryId"/>
                        <button type="submit" onclick="return confirm('Are you sura you want to Update Category @category.Name')"
                                class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Update Category
                        </button>
                    </div>
                    </form>
               </dl>
            
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/category/update.js"></script>
}